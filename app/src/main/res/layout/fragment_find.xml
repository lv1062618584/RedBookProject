<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.john.myapplication.fragment.FindFragment">

    <!-- TO
    <DO: Update blank fragment layout -->

    <ListView
        android:id="@+id/ListView_findfragment_jichu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff0000"
        android:orientation="horizontal">
        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="300dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@mipmap/smssdk_search_icon"
                android:layout_height="30dp"
                android:gravity="left|center"
                android:background="#ffe"
                android:text="搜索笔记商品和用户"/>
            <ImageView
                android:id="@+id/image"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/shop_icon_cart"/>


        </RelativeLayout>

    </LinearLayout>
</FrameLayout>
