<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/xm_jt_1"
    android:background="@drawable/bac_yuanjiao"
    android:orientation="vertical">
<!--包裹内容的黑线-->
    <TextView
        android:id="@+id/txt_findgrament_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="最显白的存稿，原来是TA们"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/jt_0"
        android:onClick="onClick"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="笔记："/>
        <TextView
            android:id="@+id/txt_findgrament_biji"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_vertical|left"
            android:layout_height="match_parent"
            android:text="11"/>
        <TextView

            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="粉丝："/>
        <TextView
            android:id="@+id/txt_findgrament_fensi"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="229"/>
        <TextView
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/jt_1"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_findfragment_1"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"/>
        <ImageView
            android:id="@+id/img_findfragment_2"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"/>
        <ImageView
            android:id="@+id/img_findfragment_3"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"/>
        <ImageView
            android:id="@+id/img_findfragment_4"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#111111"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/jt_2"
        android:onClick="onClick"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img_findfragment_touxiang"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="onClick"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="由"/>
        <TextView
            android:id="@+id/txt_findfragment_name"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="生活属"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="15dp"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="创建"/>
        <TextView
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />


    </LinearLayout>
</LinearLayout>